[mysqld]
# dir
#innodb_dedicated_server=1
#basedir=/opt/mysql
#datadir=/data/mydata
#secure_file_priv=/var/lib/mysql-files
#pid_file=/data/mydata/mysqld.pid
pid_file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
datadir         = /var/lib/mysql
secure-file-priv= NULL


# network
#socket=/tmp/mysql.sock
max_connections=500

# general set
lower_case_table_names=1
default_authentication_plugin=mysql_native_password
default-time-zone='+08:00'
wait_timeout=30

# Log 
## Error Log
#log_error=/data/mylog/mysqld.log
log_timestamps=SYSTEM
## Slow log
log_output=file
slow_query_log=1
long_query_time=2

# bin log
server_id=1
#log_bin=/data/mylog/binlog/binlog
binlog_format=row

#binlog_row_event_max_size=8192
#binlog_checksum=crc32
#max_binlog_size=512M
#
#binlog_cache_size=128K
#binlog_stmt_cache_size=32K
#max_binlog_cache_size=1G
#max_binlog_stmt_cache_size=1G
#
#binlog_error_action=abort_server
#binlog_expire_logs_seconds=0

#sync_binlog=1
#binlog_group_commit_sync_delay=0
#
#default_storage_engine=innodb
#transaction_write_set_extraction=xxhash64

# innodb
gtid_mode=on
enforce_gtid_consistency=1
## buffer pool
innodb_buffer_pool_size=8G
innodb_change_buffer_max_size=25
innodb_buffer_pool_instances=8

## redo log
#innodb_log_group_home_dir=/data/mylog/redolog
#innodb_log_file_size=256M
#innodb_log_files_in_group=4

## log buffer
#innodb_log_buffer_size=16M
#innodb_flush_log_at_trx_commit=1
#innodb_flush_log_at_timout=

## tablespace
### system tablespace
innodb_file_per_table=1
### undo tablespace
#innodb_undo_directory=/data/mylog/undolog
#innodb_rollback_segments=128
#innodb_max_undo_log_size=1G

