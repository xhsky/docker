# centos vm Dockerfile
# Date: 2022年 10月 20日 星期四 11:57:38 CST

FROM centos

LABEL maintainer="x_hsky@163.com"

#COPY nginx.repo /etc/yum.repos.d/

RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    # yum groupinstall Minimal Install -y && yum install vim wget -y && \
    rm -rf /var/cache/yum/ && \
    mkdir /dream && \
    echo 'set -o vi' >> /etc/bashrc && \
    echo 'bind -m vi-command ".":insert-last-argument' >> /etc/bashrc && \
    echo 'bind -m vi-insert "\c-l":clear-screen' >> /etc/bashrc

VOLUME /dream
WORKDIR /dream
EXPOSE 3081 3082 3083 3084 3085 3086 3087 3088 3089

STOPSIGNAL SIGTERM

CMD ["sleep", "360000"]

